<Window x:Class="MDesptopWallpaper.DesptopWallpaper"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MDesptopWallpaper"
        mc:Ignorable="d" ResizeMode="NoResize" WindowStyle="None"
        xmlns:mimage="clr-namespace:MImageView" 
        Title="DesptopWallpaper" Left="0" Top="0" >
    <Grid>
        <mimage:MImageView AnimationEnable="True" AutoMatic="True">
            <mimage:MImageViewItem x:Name="imageview" SearchMode="Mux" SearchDirectories="C:\Windows\Web\Wallpaper\Theme1"/>
        </mimage:MImageView>
    </Grid>
</Window>
